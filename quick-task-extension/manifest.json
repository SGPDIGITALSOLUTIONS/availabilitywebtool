{
  "manifest_version": 3,
  "name": "Quick Ad-hoc Task",
  "version": "1.0.0",
  "description": "Quickly add completed ad-hoc tasks to your productivity tracker",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://availabilitywebtool.vercel.app/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "quick-task": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Quick add ad-hoc task"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
